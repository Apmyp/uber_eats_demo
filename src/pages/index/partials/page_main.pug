    h1.page_main__header Рестораны Москвы
    ul.page_main__restaurants.restaurants.row
      mixin restaurant(image, image_2x, image_alt, title, price_range, tags, minutes)
        li.restaurants__single.restaurant.col-xs-12.col-sm-6.col-md-6.col-lg-4
          img.restaurant__image(src=image, srcset=image_2x + ' 2x', alt=image_alt)
          h2.restaurant__header: a.restaurant__link(href="#")= title
          p.restaurant__tags(aria-label="Ценовой диапозон и типы блюд в ресторане")
            = price_range
            |
            | •
            |
            = tags.join(' • ')
          p.restaurant__time(aria-label="Время за которое привозят еду")
            = minutes.join('—')
            |
            | минут

